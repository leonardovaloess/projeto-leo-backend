generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}


model User {
  id                   String   @id @default(uuid())
  name                 String
  email                String   @unique
  password             String
  created_at           DateTime @default(now())
  updated_at           DateTime @updatedAt
  
  clients              Client[]
  services             Service[]
  subscriptions        Subscription[]
  notificationLogs     NotificationLog[]
}

model Client {
  id         String   @id @default(uuid())
  user_id    String
  name       String
  email      String
  phone_number String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user       User     @relation(fields: [user_id], references: [id])

}

model Service {
  id         String   @id @default(uuid())
  user_id    String
  name       String
  description String
  price      Float
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user       User     @relation(fields: [user_id], references: [id])
}




model Subscription {
  id                    String   @id @default(uuid())
  user_id               String
  stripe_subscription_id String
  status                String
  start_date            DateTime
  end_date              DateTime
  created_at            DateTime @default(now())
  updated_at            DateTime @updatedAt

  user                  User     @relation(fields: [user_id], references: [id])
}

model NotificationLog {
  id             String   @id @default(uuid())
  user_id        String
  client_id      String
  invoice_id     String
  message_status String
  sent_at        DateTime
  created_at     DateTime @default(now())

  user           User     @relation(fields: [user_id], references: [id])


}
